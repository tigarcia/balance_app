<div class="row">

    <!-- sign up page -->

  <div class="col-xs-offset-2 col-xs-8 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
    <br><br>

    <%= form_for @user do |f| %>

    	<%= f.text_field :first_name, placeholder: 'first name', class: "form-control" %><br>
      <%= f.email_field :email_address, placeholder: 'email address', class: "form-control" %><br>
      <%= f.telephone_field :phone, placeholder: 'mobile phone (ten digits)', class: "form-control" %><br>
      
      <%= f.password_field :password, placeholder: 'password', class: "form-control" %><br>
      <%= f.password_field :password_confirmation, placeholder: 'password again', class: "form-control" %><br>
      
      <%= f.submit "create my account", class: "btn btn-default" %>
    
    <% end %>

    <br><br>

    <p>already have an account? <%= link_to "sign in", signin_path %></p>

  </div>
</div>